
#include <iostream>
#include<limits.h>
#define V 5
# define inf 9999
void printPath(int path,int parent[V])
{   
    
    
    if(path==-1)
    {
  
    return;
    }
    printPath(parent[path],parent);
    std::cout<<path<<"->";
}
  
void printSolution(int dist[], int parent[V],int src) 
{
    printf("Vertex \t\t Distance from Source\t\t\t Path\n"); 
    for (int i = 0; i < V; i++) 
    {
        printf("%d \t\t %d\t\t\t\t\t", i, dist[i]);
       if(i==src)
        std::cout<<"this is source";
    
       else if(parent[i]==-1)
        std::cout<<"no path found";
    
        else{
        printPath(parent[i],parent);
        std::cout<<i;
        }
        printf("\n");
    }
        
} 
